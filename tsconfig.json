{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-native",
      "lib": ["es6"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmit": true,
      "paths": {
        "@src/*": ["./src/*"]
      },
      "strict": true,
      "strictNullChecks": true,
      "target": "esnext"
    },
    "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"],
    "allowSyntheticDefaultImports": true
  }